.form-signin {
  max-width: 95%;
  height: 80%;
  padding: 20px 15px 0 15px;
  margin: 0 auto;
}
/*.form-signin .checkbox {
  margin-bottom: 10px;
}
.form-signin .checkbox {
  font-weight: normal;
}*/
.form-signin .form-control {
  position: relative;
  font-size: 16px;
  height: auto;
  padding: 3%;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="text"] {
  margin-bottom: 5%;
  /*border-radius: 10px;*/
  background: url(../images/login_user.png) 0 0 #fff no-repeat;
  padding-left:20%;
  color:#000;
  z-index: 999;
}
.form-signin input[type="password"] {
  margin-bottom: 5%;
  /*border-radius: 10px;*/
  background: url(../images/login_pas.png) 0 0 #fff no-repeat;
  padding-left:20%;
  color:#000;
}
.form-signin button {
  border-radius: 10px;
}

#send{
	height: 100%;
	background-color: #01a1e9;
}
