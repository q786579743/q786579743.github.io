/*影集*/
.album {
	padding:8px 3px 8px 8px;
 *padding:8px 3px;
}
.album ul li {
	margin:5px;
	padding:10px;
	float:left;
	width:230px;
	height:270px;
	border:1px solid #ccc;
	position:relative;
}
.album ul li h3 {
	padding:0px 0 10px 5px;
	font-size:12px;
	font-weight:bold;
}
.album ul li p img {
	width:230px;
	height:180px;
	border:none;
	background:#f2f2f2;
}
.album ul li .text {
	padding:10px 0 0 5px;
	line-height:18px;
	height:54px;
	overflow:hidden;
}
#imgmark{ height:35px;  background:#101821; width:100%; margin-top:-22px; z-index:1; position:absolute; left:0;opacity:0.7;-moz-opacity:0.7;-webkit-opacity:0.7;filter:alpha(opacity:70); display:none;  }
.album #btn{height:35px;width:100%; margin-top:-22px; z-index:1; position:absolute; left:0; display:none;}
.album #btn a{ float:right; display:block; padding:0  20px; height:35px; line-height:35px; color:#fff; background-position:left; outline:none; }





