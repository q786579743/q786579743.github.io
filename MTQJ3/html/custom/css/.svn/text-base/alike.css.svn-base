* {
	margin: 0;
	padding: 0;
}


body {
	background: url(../images/login_bg-mtqj.png);
	width: 100%;
	height: 100%;
	background-size:cover;
	font-family :宋体, 微软雅黑;
}
@font-face {
 font-family:"汉仪综艺体简", "汉仪大黑简";
 src: url('../images/汉仪综艺体简.ttf') format("truetype"), url('../images/汉仪综艺体简.ttf') format("woff"), url('../images/汉仪综艺体简.ttf') format("svg"), url('../images/汉仪大黑简.ttf') format("svg");
}
ul {
	list-style:none;
}
a {
	color:#051295;
	cursor:pointer;
	text-decoration:none;
}
img {
	border:none;
}
.left {
	float:left;
}
.right {
	float:right;
}
.clear {
	clear:both;
}
.clearfix:after {
	visibility: hidden;
	display: block;
	clear: both;
	height: 0;
	font-size: 0;
	content: ".";
}
.clearfix {
	zoom:1;
}
.center {
	text-align:center;
}
.margin {
	margin:5px;
}
.allred {
	font-size:12px;
	color:#eb0f0f;
}
.mt {
	margin-top:5px;
}
.ml {
	margin-left:10px;
}
.mr {
	margin-right:10px;
}
.green {
	color:#44911f;
}
.blue {
	color:#00f;
}
.hand {
	cursor:pointer;
}
